<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
            android:id="@+id/content_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <ImageView
                android:id="@+id/select_image_view"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="50dp"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <Button
                    android:id="@+id/recognize_cancel_button"
                    android:layout_width="@dimen/button_recognize_width"
                    android:layout_height="@dimen/button_recognize_height"
                    android:layout_gravity="start"
                    android:text="@string/button_cancel_recognize"
                    android:layout_margin="@dimen/button_recognize_margin"
                    android:background="@drawable/button_cancel_ripple_effect"/>

            <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

            <Button
                    android:id="@+id/recognize_button"
                    android:layout_width="@dimen/button_recognize_width"
                    android:layout_height="@dimen/button_recognize_height"
                    android:layout_gravity="end"
                    android:text="@string/button_start_recognize"
                    android:textColor="@android:color/white"
                    android:background="@drawable/button_ripple_effect"
                    android:layout_margin="@dimen/button_recognize_margin"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>