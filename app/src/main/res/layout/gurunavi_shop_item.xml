<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/shop_card_view"
        android:layout_width="250dp"
        android:layout_height="300dp"
        android:layout_margin="4dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="15dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/gurunavi_shop_image"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerCrop"/>

        <ScrollView
                android:id="@+id/gurunavi_shop_text_scroll_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:nestedScrollingEnabled="true">

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/gurunavi_shop_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:ellipsize="end"
                        android:singleLine="true"/>

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/text_margin_top">

                    <ImageView
                            android:layout_width="@dimen/icon_margin_width"
                            android:layout_height="@dimen/icon_margin_height"
                            android:layout_gravity="top"
                            android:layout_marginStart="@dimen/icon_margin_start"
                            android:src="@drawable/ic_baseline_category_24px"/>

                    <TextView
                            android:id="@+id/gurunavi_shop_category"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/text_margin_start"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/text_margin_top">

                    <ImageView
                            android:layout_width="@dimen/icon_margin_width"
                            android:layout_height="@dimen/icon_margin_height"
                            android:layout_gravity="top"
                            android:layout_marginStart="@dimen/icon_margin_start"
                            android:src="@drawable/ic_baseline_phone_24px"/>

                    <TextView
                            android:id="@+id/gurunavi_shop_tel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/text_margin_start"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/text_margin_top">

                    <ImageView
                            android:layout_width="@dimen/icon_margin_width"
                            android:layout_height="@dimen/icon_margin_height"
                            android:layout_gravity="top"
                            android:layout_marginStart="@dimen/icon_margin_start"
                            android:src="@drawable/ic_baseline_attach_money_24px"/>

                    <TextView
                            android:id="@+id/gurunavi_shop_budget"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/text_margin_start"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/text_margin_top">

                    <ImageView
                            android:layout_width="@dimen/icon_margin_width"
                            android:layout_height="@dimen/icon_margin_height"
                            android:layout_gravity="top"
                            android:layout_marginStart="@dimen/icon_margin_start"
                            android:src="@drawable/ic_baseline_access_time_24px"/>

                    <TextView
                            android:id="@+id/gurunavi_shop_open_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/text_margin_start"
                            android:layout_marginBottom="10dp"/>
                </LinearLayout>

                <!-- TODO ボタン変更 -->
                <Button
                        android:id="@+id/map_button"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:text="map"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</android.support.v7.widget.CardView>